<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="relis.Views.frm_menu"
             xmlns:vm="clr-namespace:relis.ViewModels"
             Title="Sobre">

    <ContentPage.BindingContext>
        <vm:frm_menu_modelo />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativeLayout x:Name="rlt_container_relative_man" Margin="0">
            <StackLayout BackgroundColor="{StaticResource Accent}" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">

            </StackLayout>
            <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                <Label Text="Software MVC" FontSize="Title"/>
                <Label Text="App Multiplataforma - MVC-Asp.net-Mobile" FontSize="16" Padding="0,0,0,0"/>
            </StackLayout>



        </RelativeLayout>
    </Grid>

</ContentPage>
